@import '../variables.styl'
@import '../media.styl'

body
  font-size base
  line-height lh
  background lightest url("../../img/background.jpeg") 0 0 no-repeat
  background-size cover
  min-height 100%

h2
  font-size 2em
  text-align center
  line-height lh

.main-title
  font-style 2.5em
  text-align center
  color goldenrod
.white
  color lightest
.gold
  color goldenrod
.center
  text-align center
.black
  color darkred
.red
.green
  padding 5px 10px
  margin 0 5px
  border 1px solid #fff
  background green
  border-radius 5px
  text-transform capitalize
.red
  background: red

.subtitle
  text-align center
  font-size 1.1em
  line-height lh

.content
  min-height 100%
  margin 10px auto
  background rgba(255, 255, 255, 0.2)
  border 1px solid lightest
  border-radius 5px
.content-holder
  display block
  padding 10px

.btn
  background palegoldenrod
  border-radius 5px
  border 1px solid darkgoldenrod
  padding 5px 10px
  margin 5px
  text-transform capitalize
  font-size base*1.1
  &:hover
    background  darkgoldenrod
    cursor pointer

.image
  &__list
    text-align center

  &__block
    display inline-block
    width 20%
    @media screen and (min-width: 769px) and (max-width: 1199px)
      width 45%

    @media screen and (min-width: 501px) and (max-width: 768px)
      width 45%

    @media screen and (max-width: 500px)
      width 100%

    &:hover
      .image__holder
        border-color darkred
      .image__text
        background rgba(255, 255, 255, 0.5)
        color darkest
        border-color darkred
      //@media screen and (max-width: 500px)
      //  width 100%

  &__holder
    border 1px solid lightest
    background rgba(0, 0, 0, 0.2)
    vertical-align top
    text-align center
    height 300px
    border-radius 5px
    box-sizing border-box

  &__item
    height 100%
    max-width 100%
    max-height 100%
    vertical-align center
    border-radius 5px

  &__text
    font-size 0.9em
    background rgba(0, 0, 0, 0.5)
    color lightest
    padding 5px 0
    border-radius 5px
    border: 1px solid #000

.copyright
  font-size 0.8em
  font-style italic
.square
  display inline-block
  margin 5px
  height 40px
  width 40px
  background darkred
  border 3px solid antiquewhite
  border-radius 5px

  //lesson 3
#active
  background: dodgerblue
  color orangered
  //lesson 4
.drinks
  font-size base * 1.2
  color green
  text-shadow  0px 0px 5px #fff
  font-style italic
  list-style none
  &__title
    margin 5px
  &__subtitle
    font-size base * 1.7
    margin 5px
  &__item
    display: inline-block
  &__link
    display block
    text-transform capitalize
    color greenyellow
    text-shadow  0px 0px 5px #000
    padding 10px 20px
    margin 5px
    background-color rgba(0, 0, 0, 0.6);
    border-radius 5px;
    text-decoration none

.newClass
  background-color rgba(193, 66, 66, 0.6)

.str-transform
  color: #000000
  font-size base * 1.1
  font-weight bold
  display inline-block
  width 150px
  padding-left 15px
  &__result
    display: inline-block
    font-size base * 1.3

.inline-block
  display inline-block

.lesson6
  &__item
    margin 5px
    border 3px solid #fff
    background rgba(255, 255, 255, 0.3)
    border-radius 5px
    min-height 30px
    min-width 200px
    vertical-align top
  &__text
    font-size base * 1.1

.close-alert
  display none
  position fixed
  top 10px
  right 10px
  width 500px
  padding 10px
  border 1px solid #000
  background rgba(0, 0, 0, 0.6)
  color #fff
  text-align left
  font-size base * 1.1

.show-alert
  display block
